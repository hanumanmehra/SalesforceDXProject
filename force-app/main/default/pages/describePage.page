<apex:page controller="DescribeSobject" showheader="true" sidebar="false" id="pgId"> 
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"/>
	<html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
		<apex:pagemessages />
		
		<script type="text/javascript">
			function ShowLoading() 
	        {
	            document.getElementById('blockbckanim').style.display="block";
	        }
	        
	        function HideLoading()
	        {
	            document.getElementById('blockbckanim').style.display="none";
	        }
		</script>
		
		<style> 
     		#blockbckanim 
	    	 {
	            background-color:rgba(196, 204, 220, 0.8);
	            width:100%;
	            height:100%;
	            position: absolute;
	            top: 0px;
	            left: 0px;
	            z-index: 1000;
	            rgba(0, 0, 0, 0.71);
	            cursor: wait;
	        }
        </style>
        
         <div id="blockbckanim" style="display:none">
	        <div id="apimgld">
	            <img src="/img/loading32.gif" style="height: 22px;  margin-left: 44%; margin-top: 52px;position: fixed;" />&nbsp;&nbsp;<br/>
	        </div>
	    </div>
	    
		<apex:form >
			<apex:actionStatus id="as2" onStart="ShowLoading();" onstop="HideLoading();"/>
			
			<apex:pageblock Id="pgblockId" >
				<span Style="margin-left: 6%;" ><b>Object Name</b></span>    
				<apex:selectlist size="1" value="{!selectobject}" Style="margin-left: 6%;"> 
					<apex:selectOption itemValue="None" itemLabel="None"  /> 
					<apex:selectoptions value="{!Items}" />
					<apex:actionsupport event="onchange"  action="{!fieldsOfObject}" rerender="pgblockId,pgId2,selfiledId,recordId" status="as2"/> 	      
				</apex:selectlist>		
			</apex:pageblock>
			
			<apex:outputpanel id="selfiledId">
			
	 			<apex:pageblock Id="pgId2"  rendered="{!if(selectobject ==null || selectobject =='None' || fieldItems == null,false,true)}">
					<span style="margin-left: 6%;"><b>Select fields</b></span>
					<apex:selectlist value="{!selectfields}" size="5" multiselect="true" style="margin-left: 6%;">    
						<apex:selectoptions value="{!fieldItems}"/>
					</apex:selectlist>
					
					<span style="margin-left: 55%;"><b>Filter Text</b></span>
					<apex:inputtext value="{!inputvalue}"  id="check" style="margin-left: 1%;"/>
					<apex:commandButton value="Submit" action="{!inputmethod}" rerender="pgId2,recordId" status="as2" style="margin-left: 48%;" />  
				</apex:pageblock>	
			</apex:outputpanel>
			
			
			<apex:outputpanel id="recordId">
			 
				<apex:pageblock id="pageId3" title="Records" rendered="{!Iselect}">
					<apex:pageblocksection > 
						<apex:outputPanel rendered="{!if(searchlist.size <=0,true,false)}" style="float:left">
		                    <apex:outputText value="No records to display."></apex:outputText>
		                </apex:outputPanel>
	                </apex:pageblocksection>
	                
	                 <apex:outputpanel rendered="{!if(searchlist.size <=0,false,true)}"> 
						<div class="container" style="overflow-x: scroll; overflow-y: scroll;">   
					  		<table class="table" width="100%"  height="100%">
								<thead>
					      			<tr>
					        			<apex:repeat value="{!selectfields}" var="sel">
			        		 				<th><span>{!sel}</span></th>
					        			</apex:repeat>
					     			 </tr>
						    	</thead>
						    	<tbody>
				    				<apex:repeat value="{!searchlist}" var="sc">
			    						<tr>
		    								<apex:repeat value="{!selectfields}" var="sel"> 
			        		 					<td><span>{!sc[sel]}</span></td>
				        					</apex:repeat>
			        		 			</tr>
					        		</apex:repeat>
						    	</tbody>
				   	 		</table>
	   					</div>
	 				</apex:outputpanel> 
	 				
				</apex:pageblock>	
			</apex:outputpanel>	
			
		</apex:form>
	</html>
</apex:page>